@model WMS.Models.Invent.TransferIn

@{
    Layout = "_AdminlteNetcore";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Goods Receive
            <small>@Model.TransferInNumber</small>
        </h1>

    </section>
    <div class="pad margin no-print">
        <div class="callout callout-info" style="margin-bottom: 0!important;">
            <h4><i class="fa fa-info"></i> Note:</h4>
            This page has been enhanced for printing. Click the print button at the bottom to print.
        </div>
    </div>
    <!-- Main content -->
    <section class="invoice">
        <!-- title row -->
        <div class="row">
            <div class="col-xs-12">
                <h2 class="page-header">
                    <i class="fa fa-globe"></i> Goods Receive:
                    <small class="pull-right">Date: @Model.TransferInDate.ToString("dd-MMM-yyyy")</small>
                </h2>
            </div>
            <!-- /.col -->
        </div>
        <!-- info row -->
        <div class="row invoice-info">
            <div class="col-sm-4 invoice-col">
                From Warehouse
                <address>
                    <strong>@Model.WarehouseFrom.WarehouseName</strong><br>
                    @Model.WarehouseFrom.Street1<br>
                    @Model.WarehouseFrom.Street2<br>
                    @Model.WarehouseFrom.City<br>
                    attn: @Model.TransferOrder.PicName
                </address>
            </div>
            <!-- /.col -->
            <div class="col-sm-4 invoice-col">
                To Warehouse
                <address>
                    <strong>@Model.WarehouseTo.WarehouseName</strong><br>
                    @Model.WarehouseTo.Street1<br>
                    @Model.WarehouseTo.Street2<br>
                    @Model.WarehouseTo.City<br>
                    attn: @Model.TransferOrder.PicName
                </address>
            </div>
            <!-- /.col -->
            <div class="col-sm-4 invoice-col">
                <b>Goods Receive Number:</b> @Model.TransferInNumber<br>
                <b>Goods Receive Date:</b> @Model.TransferInDate.ToString("dd-MMM-yyyy")<br>
                <b>TO Number:</b> @Model.TransferOrder.TransferOrderNumber<br>
                <b>TO Date:</b> @Model.TransferOrder.TransferOrderDate.ToString("dd-MMM-yyyy")<br>
                <b>PIC:</b> @Model.TransferOrder.PicName<br>

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- Table row -->
        <div class="row">
            <div class="col-xs-12 table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Qty</th>
                            <th>ItemType</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.TransferInLine)
                        {
                            <tr>
                                <td>@item.Qty</td>
                                <td>@item.ItemType.ItemCode</td>
                                <td>@item.ItemType.ItemTypeName</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <div class="row">
            <!-- accepted payments column -->
            <div class="col-xs-6">
                <p class="lead">Descriptions:</p>
                <p class="text-muted well well-sm no-shadow" style="margin-top: 10px;">
                    @Model.Description
                </p>
            </div>
            <!-- /.col -->
            <div class="col-xs-6">

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- this row will not appear when printing -->
        <div class="row no-print">
            <div class="col-xs-12">

                <a href="@Url.Action("PrintTransferIn", new { id = Model.TansferInId })" target="_blank" class="btn btn-primary"><i class="fa fa-print"></i> Print</a>

            </div>
        </div>
    </section>
    <!-- /.content -->
    <div class="clearfix"></div>
</div>
<!-- /.content-wrapper -->
