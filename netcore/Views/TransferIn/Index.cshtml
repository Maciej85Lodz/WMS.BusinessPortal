@model IEnumerable<WMS.Models.Invent.TransferIn>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminlteNetcoreIndex.cshtml";
    ViewData["EntityIcon"] = "fa fa-download";
    ViewData["ListTitle"] = "Goods Receive List";
    ViewData["IndexInfo"] = "Goods Receive is a process of Receiving the products to a Warehouse based on transfer order (TO)";
}


<table class="table table-hover table-striped" style="width:100%">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.TransferInNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransferInDate)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.BranchIdFrom)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.WarehouseIdFrom)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.BranchIdTo)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.WarehouseIdTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransferOrder)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <div class="tools">
                    <a asp-action="Details" asp-route-id="@item.TansferInId" class="btn btn-primary btn-xs"><i class="fa fa-list"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.TansferInId" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i></a>
                </div>
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransferInNumber)
            </td>
            <td>
                @item.TransferInDate.Date.ToString("dd-MMM-yyyy")
            </td>
            <td class="hidden">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="hidden">
                @Html.DisplayFor(modelItem => item.BranchIdFrom)
            </td>
            <td class="hidden">
                @Html.DisplayFor(modelItem => item.WarehouseIdFrom)
            </td>
            <td class="hidden">
                @Html.DisplayFor(modelItem => item.BranchIdTo)
            </td>
            <td class="hidden">
                @Html.DisplayFor(modelItem => item.WarehouseIdTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransferOrder.TransferOrderNumber)
            </td>

        </tr>
        }
    </tbody>
</table>
