@model WMS.Models.Invent.TransferIn
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PrintTransferIn</title>
</head>
<body onload="window.print();">
    <div class="wrapper">
        <!-- Main content -->
        <section class="invoice">
            <!-- title row -->
            <div class="row">
                <div class="col-xs-12">
                    <h2 class="page-header">
                        <i class="fa fa-globe"></i> Goods Receive
                        <small class="pull-right">@Model.TransferInNumber</small>
                    </h2>
                </div>
                <!-- /.col -->
            </div>
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                    From Warehouse
                    <address>
                        <strong>@Model.WarehouseFrom.WarehouseName</strong><br>
                        @Model.WarehouseFrom.Street1<br>
                        @Model.WarehouseFrom.Street2<br>
                        @Model.WarehouseFrom.City<br>
                        attn: @Model.TransferOrder.PicName
                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    To Warehouse
                    <address>
                        <strong>@Model.WarehouseTo.WarehouseName</strong><br>
                        @Model.WarehouseTo.Street1<br>
                        @Model.WarehouseTo.Street2<br>
                        @Model.WarehouseTo.City<br>
                        attn: @Model.TransferOrder.PicName
                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    <b>Goods Receive Number:</b> @Model.TransferInNumber<br>
                    <b>Goods Receive Date:</b> @Model.TransferInDate.ToString("dd-MMM-yyyy")<br>
                    <b>TO Number:</b> @Model.TransferOrder.TransferOrderNumber<br>
                    <b>TO Date:</b> @Model.TransferOrder.TransferOrderDate.ToString("dd-MMM-yyyy")<br>
                    <b>PIC:</b> @Model.TransferOrder.PicName<br>

                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <!-- Table row -->
            <div class="row">
                <div class="col-xs-12 table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Qty</th>
                                <th>ItemType</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.TransferInLine)
                            {
                                <tr>
                                    <td>@item.Qty</td>
                                    <td>@item.ItemType.ItemCode</td>
                                    <td>@item.ItemType.ItemTypeName</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <div class="row">
                <!-- accepted payments column -->
                <div class="col-xs-6">
                    <p class="lead">Descriptions:</p>
                    <p class="text-muted well well-sm no-shadow" style="margin-top: 10px;">
                        @Model.Description
                    </p>
                </div>
                <!-- /.col -->
                <div class="col-xs-6">

                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
    @Html.Partial("_AdminlteNetcoreBasicStyles")
    @Html.Partial("_AdminlteNetcoreBasicScripts")
</body>
</html>
