@model WMS.Models.Invent.TransferOrder


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminlteNetcoreCreate.cshtml";
    ViewData["EntityIcon"] = "fa fa-recycle";
    ViewData["CreateInfo"] = "Transfer Order (TO) is a process of transfering products from one Warehouse to another Warehouse. From and To Warehouse should be different";
}

@Html.Partial("_StatusMessage", (string)ViewBag.StatusMessage)
<div class="row">
    <div class="col-md-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="TransferOrderId" />
        <input type="hidden" asp-for="TransferOrderStatus" />
        <input type="hidden" asp-for="TransferOrderNumber" />
        <div class="row">
            <div class="col-md-12">
                <small class="text-yellow"><i>Summary</i></small>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="TransferOrderNumber" class="control-label"></label>
                    <input asp-for="TransferOrderNumber" class="form-control" disabled />
                    <span asp-validation-for="TransferOrderNumber" class="text-danger"></span>
                </div>
            </div>           
        </div>
        <div class="form-group has-success">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="TransferOrderDate" class="control-label"></label>
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input asp-for="TransferOrderDate" value="@Model.TransferOrderDate.ToString("MM/dd/yyyy")" class="form-control pull-right datepicker" type="text" />
                    </div>
                    <span asp-validation-for="TransferOrderDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="TransferOrderStatus" class="control-label"></label>
                    <select asp-for="TransferOrderStatus" class="form-control select2" asp-items="Html.GetEnumSelectList<WMS.Models.Invent.TransferOrderStatus>()" disabled></select>
                    <span asp-validation-for="TransferOrderStatus" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <small class="text-yellow"><i>Property</i></small>
            </div>
        </div>
        <div class="row hidden">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="BranchIdFrom" class="control-label"></label>
                    <select asp-for="BranchIdFrom" class="form-control select2" asp-items="ViewBag.branchIdFrom"></select>
                    <span asp-validation-for="BranchIdFrom" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="BranchIdTo" class="control-label"></label>
                    <select asp-for="BranchIdTo" class="form-control select2" asp-items="ViewBag.branchIdTo"></select>
                    <span asp-validation-for="BranchIdTo" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="WarehouseIdFrom" class="control-label"></label>
                    <select asp-for="WarehouseIdFrom" class="form-control select2" asp-items="ViewBag.warehouseIdFrom"></select>
                    <span asp-validation-for="WarehouseIdFrom" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="WarehouseIdTo" class="control-label"></label>
                    <select asp-for="WarehouseIdTo" class="form-control select2" asp-items="ViewBag.warehouseIdTo"></select>
                    <span asp-validation-for="WarehouseIdTo" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group has-success">
                    <label asp-for="PicName" class="control-label">Person in charge name</label>
                    <input asp-for="PicName" class="form-control" />
                    <span asp-validation-for="PicName" class="text-danger"></span>
                </div>
            </div>            
        </div>


    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
